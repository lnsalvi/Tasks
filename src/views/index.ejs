<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Stylesheets -->
    <link rel="stylesheet" href="./styles/general.css">
    <link rel="stylesheet" href="./styles/index.css">

  <!-- Favicon -->
  <link rel="shortcut icon" href="/images/oiler.png" type="image/x-icon">

  <title>Tasks Online</title>
</head>
<body>
  <h1>Administrar Tasks.</h1>

  <main>
    <section>
      <div class="cntMain">
        <div class="cntFormAddTask">
          <form action="#">
            <label class="lblFrmAddTask" for="affair">Asunto:</label>
            <input class="inpFrmAddTask" type="text" name="affair" id="affair">
            <label class="lblFrmAddTask" for="description">Descripcion:</label>
            <input class="inpFrmAddTask" type="text" name="description" id="description">
            
            <label class="lblFrmAddTask" for="participants">Mails:</label>
            <input type="checkbox" name="mail_1" id="mail1"><label class="ml-05" for="mail_1">psalvi@semapi.com.ar</label><br>
            <input class="mt-1" type="checkbox" name="mail_2" id="mail2"><label class="ml-05" for="mail_2">psalvi@semapi.com</label><br>
            <input class="mt-1" type="checkbox" name="mail_3" id="mail3"><label class="ml-05" for="mail_3">salvipablo@gmail.com</label><br>

            <input class="submitFrmAddTask" type="submit" value="Cargar tarea">
          </form>
        </div>
        <div class="cntCalendar">
          <div class="calendar">
            <div class="header-calendar">
              <p class="prev" id="btnPrev">&#10094;</p>
              <p id="titleCalendar"></p>
              <p class="next" id="btnNext">&#10095;</p>
            </div>
            <div class="weekdays-calendar">
              <p class="th-grid">Mo</p>
              <p class="th-grid">Tu</p>
              <p class="th-grid">We</p>
              <p class="th-grid">Th</p>
              <p class="th-grid">Fr</p>
              <p class="th-grid">Sa</p>
              <p class="th-grid">Su</p>
            </div>
            <div class="days-calendar" id="daysCalendar">
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <script src="./js/index.js"></script>
</body>
</html>